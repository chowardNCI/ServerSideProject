<p id="notice"><%= notice %></p>

<h1>Listing Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>Address3</th>
      <th>Address4</th>
      <th>Address5</th>
      <th>Telephone</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.firstname %></td>
        <td><%= profile.lastname %></td>
        <td><%= profile.address1 %></td>
        <td><%= profile.address2 %></td>
        <td><%= profile.address3 %></td>
        <td><%= profile.address4 %></td>
        <td><%= profile.address5 %></td>
        <td><%= profile.telephone %></td>
        <td><%= profile.user %></td>
        <td><%= link_to 'Show', profile %></td>

        <% if current_user.admin? %> 
          <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
          <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Profile', new_profile_path %>
<% end %>

<!DOCTYPE html> <html> <head>
  <title>Teaheaven</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

  
<body class='<%= controller.controller_name %> '>
  <div class="row">

    <div class="header">
      <a href="/about">
        <%= image_tag('logo.png', :class=>'logoImage', :alt=>'Tea Heaven Logo', :title=>'Tea Heaven Logo') %>
      </a>
      <div id="fullMenu">
        <a href="/store">Tea shop</a>
        <a href="/about">About</a>
        <a href="requestCatalogue.html">Request Catalogue</a>
        <a href="/contact">Contact Us</a>
      </div>
    </div>

    <!-- reset floats -->
    <div class="row">

      <!-- add a dropdown menu -->
      <div class="dropdownMenu">
        <div class="dropdownMenu">
          <%= image_tag('menuSmall.png', :class=>'menuSmallImage', :alt=>'Menu', :title=>'Menu') %>
          <div class="dropdownMenu-content">
            <a href="/store">Tea shop</a>
            <a href="/about">About</a>
            <a href="requestCatalogue.html">Request Catalogue</a>
            <a href="/contact">Contact Us</a>
          </div>
        </div>
      </div>
  
  </div>
<div>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

  <%= yield %>

<% if user_signed_in? %>
  <div>Signed in as ... <%= current_user.email %> (<%= link_to 'Sign out', destroy_user_session_path, :method => :delete%>)
  </div>
<% else %>
  <%= link_to 'Register', new_user_registration_path %> or <%= link_to 'Sign in', new_user_session_path %>
<% end %>

</body>
</html>

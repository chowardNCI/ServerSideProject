
<h1>Listing Teas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Strength</th>
      <th>Country</th>
      <th>Description</th>
      <% if current_user && current_user.isAdmin? %>
        <th>Price</th>
        <th>Stock</th>
        <th>Image url</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teas.each do |tea| %>
      <tr>
        <td><%= tea.name %></td>
        <td><%= tea.category %></td>
        <td><%= tea.strength %></td>
        <td><%= tea.country %></td>
        <td><%= sanitize(tea.description) %></td>
        <td><%= link_to 'Show', tea %></td>
        <% if current_user && current_user.isAdmin? %>
          <td><%= number_to_currency(tea.price) %> per 100g</td>
          <td><%= tea.stock %></td>
          <td><%= image_tag(tea.image_url, :class=>'teaImg', :title=>tea.name, :alt=>'Image of tea') %></td>
          <td><%= link_to 'Edit', edit_tea_path(tea) %></td>
          <td><%= link_to 'Destroy', tea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user && current_user.isAdmin? %>
  <%= link_to 'New Tea', new_tea_path %>
<% end %>

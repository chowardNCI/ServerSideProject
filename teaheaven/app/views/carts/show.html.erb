<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<%= link_to 'Edit', edit_cart_path(@cart) %> |
<%= link_to 'Back', carts_path %>

<h2>Your Cart</h2>
<ul>
  <% @cart.order_items.each do |item| %>
    <li>
       <%= item.quantity %> &times; <%= item.tea.name %> <%= number_to_currency(item.total_price) %>
    </li>
  <% end %>
</ul>
<%= number_to_currency(@cart.total_price) %>

<%= button_to 'Empty cart', @cart, method: :delete, data: {confirm: 'Are you sure you want to empty your cart?'} %>
